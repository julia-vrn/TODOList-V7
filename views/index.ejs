<%- include("header.ejs") -%>
<body>
    <div class="box" id="heading">
        <h1><%= date %></h1>
    </div>
    
   
    <div class="box">
        
        <% for(var i = 0; i < toDoItems.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= toDoItems[i].description %></p>
            </div>
       <% } %>   
      

      <form class="class" action="/" method="POST">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= date %>">+</button>
        </form>
    </div>

